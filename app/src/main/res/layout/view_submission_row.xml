<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:duplicateParentState="true"
        android:textColor="@color/primary_selector"
        tools:text="1234"/>

    <TextView
        android:id="@+id/for_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/score"
        android:layout_toRightOf="@+id/score"
        android:duplicateParentState="true"
        android:paddingLeft="3dip"
        android:text="@string/for_string"
        android:textColor="@color/secondary_selector"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/for_string"
        android:layout_toRightOf="@+id/for_string"
        android:duplicateParentState="true"
        android:paddingLeft="3dip"
        android:textColor="@color/primary_selector"
        tools:text="Author"/>

    <TextView
        android:id="@+id/in_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/author"
        android:layout_toRightOf="@+id/author"
        android:duplicateParentState="true"
        android:paddingLeft="3dip"
        android:text="@string/in_string"
        android:textColor="@color/secondary_selector"/>

    <TextView
        android:id="@+id/subreddit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/in_string"
        android:layout_toRightOf="@+id/in_string"
        android:duplicateParentState="true"
        android:paddingLeft="3dip"
        android:textColor="@color/primary_selector"
        tools:text="Subreddit"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:duplicateParentState="true"
        android:textColor="@color/primary_selector"
        android:textSize="@dimen/abc_text_size_headline_material"
        tools:text="Title text"/>

</merge>