<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:orientation="vertical"
                android:padding="10dip">

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:textColor="@color/primary_text_default_material_light"
        tools:text="1234"/>

    <TextView
        android:id="@+id/for_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/score"
        android:layout_toRightOf="@+id/score"
        android:paddingLeft="3dip"
        android:text="@string/for_string"
        android:textColor="@color/secondary_text_default_material_light"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/for_string"
        android:layout_toRightOf="@+id/for_string"
        android:paddingLeft="3dip"
        android:textColor="@color/primary_text_default_material_light"
        tools:text="Author"/>

    <TextView
        android:id="@+id/in_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/author"
        android:layout_toRightOf="@+id/author"
        android:paddingLeft="3dip"
        android:text="@string/in_string"
        android:textColor="@color/secondary_text_default_material_light"/>

    <TextView
        android:id="@+id/subreddit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/in_string"
        android:layout_toRightOf="@+id/in_string"
        android:paddingLeft="3dip"
        android:textColor="@color/primary_text_default_material_light"
        tools:text="Subreddit"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/primary_text_default_material_light"
        android:textSize="@dimen/abc_text_size_headline_material"
        tools:text="Title text"/>

</RelativeLayout>